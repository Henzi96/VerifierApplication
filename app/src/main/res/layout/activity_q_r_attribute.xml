<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QRAttributeActivity"
    android:id="@+id/qr_attribute_layout">




    <com.budiyev.android.codescanner.CodeScannerView
        android:id="@+id/scannerViewAttribute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:autoFocusButtonColor="@color/colorPrimary"
        app:flashButtonColor="@color/colorPrimary"
        app:frameAspectRatioHeight="1"
        app:frameAspectRatioWidth="1"
        app:frameColor="@color/colorPrimary"
        app:frameCornersRadius="0dp"
        app:frameCornersSize="50dp"
        app:frameSize="0.75"
        app:frameThickness="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:maskColor="#77000000" />

    <TextView
        android:id="@+id/txtScanInfoAttribute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="Scan QR code !"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toTopOf="@+id/btn_confirm_qr_data_attribute"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_confirm_qr_data_attribute"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="80dp"
        android:background="@drawable/button_bg_custom_set"
        android:enabled="false"
        android:fontFamily="@font/roboto_bold"
        android:text="Confirm"
        android:textColor="#FFFF"
        app:layout_constraintBottom_toBottomOf="@+id/scannerViewAttribute"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>